{
	"name": "vscode-json-flow",
	"displayName": "JSON Flow",
	"description": "JSON Flow is a Visual Studio Code extension that allows you to manage your JSON files in a more efficient way.",
	"version": "1.0.0",
	"preview": true,
	"icon": "icon.png",
	"license": "MIT",
	"publisher": "imgildev",
	"author": {
		"name": "Manuel Gil",
		"email": "support@imgil.dev",
		"url": "https://imgil.dev/"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/manuelgil"
	},
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"json",
		"jsonc",
		"manager",
		"files",
		"explorer",
		"list",
		"view",
		"extension",
		"vscode"
	],
	"homepage": "https://github.com/ManuelGil/vscode-json-flow",
	"repository": {
		"type": "git",
		"url": "https://github.com/ManuelGil/vscode-json-flow"
	},
	"bugs": {
		"url": "https://github.com/ManuelGil/vscode-json-flow/issues"
	},
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "JSON Flow",
			"properties": {
				"jsonManager.files.include": {
					"type": "array",
					"default": [
						"json",
						"jsonc",
						"yaml",
						"yml",
						"toml",
						"ini",
						"cfg",
						"conf",
						"properties",
						"env",
						"xml",
						"hcl"
					],
					"scope": "resource",
					"description": "Glob patterns to include in the package. The default is json and jsonc."
				},
				"jsonManager.files.exclude": {
					"type": "array",
					"default": [
						"**/node_modules/**",
						"**/dist/**",
						"**/out/**",
						"**/build/**",
						"**/.*/**"
					],
					"scope": "resource",
					"description": "Glob patterns to exclude from the package. The default is node_modules, dist, out, build, and any hidden files."
				},
				"jsonManager.files.showPath": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "Show the path of the file in the name of the list of generated files"
				}
			}
		},
		"commands": [
			{
				"command": "jsonManager.files.refreshList",
				"title": "Refresh List",
				"category": "JSON Flow",
				"icon": "$(refresh)"
			},
			{
				"command": "jsonManager.files.openFile",
				"title": "Open File",
				"category": "JSON Flow"
			},
			{
				"command": "jsonManager.files.getFileProperties",
				"title": "Get File Properties",
				"category": "JSON Flow"
			},
			{
				"command": "jsonManager.files.copyContent",
				"title": "Copy Content to Clipboard",
				"category": "JSON Flow"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "jsonManager.files.refreshList",
					"when": "view == jsonManager.filesView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "jsonManager.files.openFile",
					"when": "view == jsonManager.filesView && viewItem == file",
					"group": "1_navigation"
				},
				{
					"command": "jsonManager.files.copyContent",
					"when": "view == jsonManager.filesView && viewItem == file",
					"group": "2_cutcopypaste"
				},
				{
					"command": "jsonManager.files.getFileProperties",
					"when": "view == jsonManager.filesView && viewItem == file",
					"group": "3_properties"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "jsonManager.filesView",
				"contents": "To effectively capture files, ensure you include the file type within the workspace settings.\n[Open Workspace Setting](command:workbench.action.openWorkspaceSettingsFile)\nTo learn more about how to use the Starter Kit [read our docs](https://docs.sml.li)."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "json-explorer",
					"title": "JSON Flow",
					"icon": "./assets/logo.svg"
				}
			]
		},
		"views": {
			"json-explorer": [
				{
					"id": "jsonManager.filesView",
					"name": "List of Files",
					"visibility": "visible"
				},
				{
					"id": "jsonManager.feedbackView",
					"name": "Help and Feedback",
					"visibility": "visible"
				}
			]
		},
		"jsonValidation": [
			{
				"fileMatch": ".vscode/settings.json",
				"url": "./schemas/config.schema.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build && npm run compile",
		"compile": "rimraf out && tsc -p ./ && cpy dist/* out/webview",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"dev": "vite",
		"build": "tsc --p ./tsconfig.web.json && vite build",
		"preview": "vite preview",
		"format": "prettier --write 'src/**/*.ts'",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint src --ext .ts --fix",
		"test": "node ./out/test/runTest.js",
		"compodoc": "npx compodoc -p tsconfig.doc.json -d compodoc --theme readthedocs -s",
		"prepare": "husky"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.4.0",
		"@xyflow/react": "^12.0.4",
		"dotenv": "^16.4.5",
		"fast-xml-parser": "^4.5.0",
		"hcl-parser": "^0.1.1",
		"ini": "^5.0.0",
		"json5": "^2.2.3",
		"jsonc-parser": "^3.3.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"toml": "^3.0.0",
		"yaml": "^2.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@compodoc/compodoc": "^1.1.25",
		"@types/glob": "^8.1.0",
		"@types/minimatch": "^3.0.5",
		"@types/mocha": "^10.0.7",
		"@types/node": "^22.1.0",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.20",
		"cpy-cli": "^5.0.0",
		"eslint": "^8.57.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.6.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.9",
		"glob": "^11.0.0",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.8",
		"mocha": "^10.7.0",
		"postcss": "^8.4.41",
		"prettier": "3.3.3",
		"rimraf": "^6.0.1",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.5.4",
		"vite": "^5.4.0",
		"vscode-test": "^1.5.0"
	}
}
