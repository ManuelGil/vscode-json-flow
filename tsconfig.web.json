{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2021",
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": true,
		"rootDir": "webview",
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true /* enable all strict type-checking options */,
	},
	"include": [
		"webview/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
