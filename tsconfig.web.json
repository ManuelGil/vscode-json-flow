{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2021",
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": true,
		"rootDir": ".",
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true /* enable all strict type-checking options */,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["./src/*"],
			"@webview/*": ["./webview/*"],
			"@shared/*": ["./shared/*"]
		}
	},
	"include": [
		"webview/**/*",
		"shared/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
