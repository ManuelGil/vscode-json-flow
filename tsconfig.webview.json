{
	"compilerOptions": {
		"target": "ES2021",
		"outDir": "out",
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": false,
		"rootDirs": [
			"src",
			"webview"
		],
		"strict": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"composite": true,
		"jsx": "react-jsx",
	},
	"include": [
		"src/**/*",
		"webview/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
